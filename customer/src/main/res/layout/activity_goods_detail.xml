<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@color/white">

        <com.community.support.component.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13px"
            android:textSize="20px"
            android:text="商品详情" />

        <LinearLayout
            android:id="@+id/llyBack"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="5px"
            android:gravity="center">

            <ImageView
                android:layout_width="15px"
                android:layout_height="20px"
                android:src="@drawable/icon_back" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="250px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="15px"
                android:paddingBottom="10px"
                android:orientation="vertical">

                <com.community.support.component.FontTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#313131"
                    android:textSize="15px"
                    tools:text="独立包装"/>

                <com.community.support.component.FontTextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:textSize="13px"
                    android:textColor="#e99056"
                    tools:text="独立包装独立包装独立包装独立包装独"/>

                <LinearLayout
                    android:id="@+id/llyTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8px"/>

                <com.community.support.component.FontTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    android:textSize="14px"
                    android:textColor="#ff510b"
                    tools:text="¥ 40.00"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlyCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="20px"
                android:layout_height="20px"
                android:src="@drawable/icon_shopping_cart"/>

            <com.community.support.component.FontTextView
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/tvCartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5px"
                android:layout_marginTop="5px"
                android:paddingTop="2px"
                android:paddingBottom="2px"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:background="#ff490b"
                android:textSize="11px"
                android:textColor="@color/white"
                tools:text="100"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f8f8f8"/>

        <RelativeLayout
            android:id="@+id/rlyPhoneService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="20px"
                android:layout_height="20px"
                android:src="@drawable/icon_phone_service"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f8f8f8"/>

        <com.community.support.component.FontTextView
            android:id="@+id/tvAddCart"
            android:layout_width="115px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/blue_text_light"
            android:textSize="15px" />

        <com.community.support.component.FontTextView
            android:id="@+id/tvBuyNow"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:background="#02bdac"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="15px" />

    </LinearLayout>

</LinearLayout>