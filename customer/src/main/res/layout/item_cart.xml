<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_marginLeft="15px"
        android:src="@drawable/icon_unselected" />

    <com.community.support.component.RoundCornerImageView
        android:id="@+id/ivIcon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"
        app:layout_auto_basewidth="height"
        app:radius="10dp"
        android:layout_marginLeft="15px"
        tools:src="@drawable/icon_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7px"
        android:layout_marginRight="12px"
        android:orientation="vertical">

        <com.community.support.component.FontTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2px"
            android:textSize="14px"
            android:textColor="#343434"
            tools:text="五香大米"/>

        <com.community.support.component.FontTextView
            android:id="@+id/tvTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:textSize="12px"
            android:textColor="#646464"
            tools:text="东北东北东北"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:orientation="horizontal"
            android:layout_marginTop="15px"
            android:gravity="center_vertical">

            <com.community.support.component.FontTextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff510b"
                android:textSize="14px"
                tools:text="¥ 200"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rectangle_corner_white">

                <RelativeLayout
                    android:id="@+id/rlySub"
                    android:layout_width="33px"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_rectangle_corner_white">

                    <View
                        android:layout_width="12px"
                        android:layout_height="2px"
                        android:layout_centerInParent="true"
                        android:background="@color/gray" />

                </RelativeLayout>

                <com.community.support.component.FontTextView
                    android:id="@+id/tvNumber"
                    android:layout_width="50px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#3d3b3c"
                    android:textSize="14px"
                    tools:text="100"/>

                <RelativeLayout
                    android:id="@+id/rlyAdd"
                    android:layout_width="33px"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_rectangle_corner_white">

                    <View
                        android:layout_width="12px"
                        android:layout_height="2px"
                        android:background="#02bcae"
                        android:layout_centerInParent="true"/>

                    <View
                        android:layout_width="2px"
                        android:layout_height="12px"
                        android:background="#02bcae"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>