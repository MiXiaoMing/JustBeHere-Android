<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f8f8fa"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyUser"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#5da3f4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15px"
            android:orientation="vertical">

            <com.community.support.component.FontTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15px"
                android:textColor="#ffffff"
                android:text="请设置您的姓名"/>

            <com.community.support.component.FontTextView
                android:id="@+id/tvCellphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="7px"
                android:textSize="13px"
                android:textColor="#ffffff"
                tools:text="1378863263"/>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llySetting"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlySetting"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="10px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_setting"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlyLogout"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginTop="10px">

                <com.community.support.component.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14px"
                    android:textColor="@color/white"
                    android:text="退出"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyBalance"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10px">

        <ImageView
            android:layout_width="18px"
            android:layout_height="16px"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_money" />

        <com.community.support.component.FontTextView
            android:text="会员余额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13px"
            android:textColor="#3a3a3a"
            android:textSize="14px" />

        <com.community.support.component.FontTextView
            android:id="@+id/tvBalance"
            android:text="--"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginLeft="13px"
            android:textColor="#da5826"
            android:textSize="14px" />

        <com.community.support.component.FontTextView
            android:text="元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:layout_marginRight="15px"
            android:textColor="@color/gray_text"
            android:textSize="13px" />

        <ImageView
            android:layout_width="8px"
            android:layout_height="12px"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@drawable/icon_arrow_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="30px"
        android:layout_height="1px"/>

    <LinearLayout
        android:id="@+id/llyAddress"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="18px"
            android:layout_height="16px"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_position" />

        <com.community.support.component.FontTextView
            android:text="服务地址"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="13px"
            android:textColor="#3a3a3a"
            android:textSize="14px" />


        <ImageView
            android:layout_width="8px"
            android:layout_height="12px"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@drawable/icon_arrow_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyFeedback"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10px">

        <ImageView
            android:layout_width="18px"
            android:layout_height="16px"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_remind" />

        <com.community.support.component.FontTextView
            android:text="提交反馈"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="13px"
            android:textColor="#3a3a3a"
            android:textSize="14px" />

        <ImageView
            android:layout_width="8px"
            android:layout_height="12px"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@drawable/icon_arrow_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="30px"
        android:layout_height="1px"/>

    <LinearLayout
        android:id="@+id/llyServer"
        android:layout_width="match_parent"
        android:layout_height="45px"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="18px"
            android:layout_height="16px"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_phone_service" />

        <com.community.support.component.FontTextView
            android:text="联系客服"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="13px"
            android:textColor="#3a3a3a"
            android:textSize="14px" />

        <ImageView
            android:layout_width="8px"
            android:layout_height="12px"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:src="@drawable/icon_arrow_right" />

    </LinearLayout>

</LinearLayout>