<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5px"
    android:paddingBottom="10px"
    android:background="@color/white"
    android:orientation="vertical">

    <com.community.support.component.RoundCornerImageView
        android:id="@+id/ivIcon"
        android:layout_width="145px"
        android:layout_height="145px"
        app:layout_auto_basewidth="height"
        android:scaleType="centerCrop"
        app:radius="10dp"
        tools:src="@drawable/icon_app"/>

    <LinearLayout
        android:id="@+id/llyTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:orientation="horizontal">

    </LinearLayout>

    <com.community.support.component.FontTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:ellipsize="end"
        android:maxEms="12"
        android:lines="1"
        android:textColor="#3a3a3a"
        android:textSize="14px"
        tools:text="做一个合格的吃货，精心为您选。做一\"/>

    <com.community.support.component.FontTextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:ellipsize="end"
        android:maxEms="14"
        android:lines="1"
        android:textColor="@color/gray_text_10"
        android:textSize="11px"
        tools:text="做一个合格的吃货，精心为您选。做一您选。做一"/>

    <com.community.support.component.FontTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:textColor="#da5826"
        android:textSize="13px"
        tools:text="¥ 23.00"/>

</LinearLayout>