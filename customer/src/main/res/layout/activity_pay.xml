<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@color/white">

        <com.community.support.component.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13px"
            android:text="订单支付"
            android:textSize="20px" />

        <RelativeLayout
            android:id="@+id/llyBack"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="5px"
            android:gravity="center">

            <View
                android:layout_width="18px"
                android:layout_height="2px"
                android:background="#03bdaf"
                android:rotation="45" />

            <View
                android:layout_width="18px"
                android:layout_height="2px"
                android:background="#03bdaf"
                android:rotation="135" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_marginLeft="15px"
            android:src="@drawable/icon_money_2" />

        <com.community.support.component.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13px"
            android:text="支付金额"
            android:textColor="#3a3a3a"
            android:textSize="14px" />

        <com.community.support.component.FontTextView
            android:id="@+id/tvPayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="#da5826"
            android:textSize="11px"
            tools:text="30元" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="105px"
            android:layout_height="30px"
            android:background="@drawable/shape_rectangle_4e"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_marginLeft="15px"
                android:src="@drawable/icon_clock_white" />

            <com.community.support.component.FontTextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12px"
                android:text="15分00秒" />

        </LinearLayout>

    </LinearLayout>

    <com.community.support.component.FontTextView
        android:layout_width="match_parent"
        android:layout_height="35px"
        android:gravity="center"
        android:text="请在倒计时结束前完成支付，否则订单将被自动取消"
        android:textColor="#9d9d9d"
        android:textSize="11px" />

    <com.community.support.component.FontTextView
        android:layout_width="match_parent"
        android:layout_height="35px"
        android:paddingLeft="15px"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:text="支付方式"
        android:textColor="#3a3a3a"
        android:textSize="14px" />

    <LinearLayout
        android:id="@+id/llyMember"
        android:layout_width="match_parent"
        android:layout_height="55px"
        android:layout_marginTop="3px"
        android:background="@color/white"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:src="@drawable/icon_money"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12px"
            android:orientation="vertical">

            <com.community.support.component.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员余额支付"
                android:textColor="#3a3a3a"
                android:textSize="14px" />

            <LinearLayout
                android:id="@+id/llyDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:orientation="horizontal">

                <com.community.support.component.FontTextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="余额：0.00元"
                    android:textColor="#9d9d9d"
                    android:textSize="11px" />

                <com.community.support.component.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7px"
                    android:textColor="#03bdaf"
                    android:textSize="11px"
                    android:text="立即充值"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMemberSelect"
            android:layout_width="22px"
            android:layout_height="22px"
            android:src="@drawable/icon_unselected"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyWX"
        android:layout_width="match_parent"
        android:layout_height="55px"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="19px"
            android:layout_height="17px"
            android:src="@drawable/icon_wx"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12px"
            android:orientation="vertical">

            <com.community.support.component.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#3a3a3a"
                android:textSize="14px" />

            <com.community.support.component.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:text="亿万用户的选择，更快更安全"
                android:textColor="#3a3a3a"
                android:textSize="12px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivWXSelect"
            android:layout_width="22px"
            android:layout_height="22px"
            android:src="@drawable/icon_selected"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.community.support.component.FontTextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15px"
            android:textColor="#da5826"
            android:textSize="15px"
            tools:text="¥ 30.00"/>
        
        <com.community.support.component.FontTextView
            android:id="@+id/tvPay"
            android:layout_width="125px"
            android:layout_height="match_parent"
            android:background="#02bdac"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="16px" />

    </LinearLayout>

</LinearLayout>