<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@color/white">

        <com.community.support.component.FontTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13px"
            android:textSize="20px"
            android:text="登录" />

        <LinearLayout
            android:id="@+id/llyBack"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="5px"
            android:gravity="center">

            <ImageView
                android:layout_width="15px"
                android:layout_height="20px"
                android:src="@drawable/icon_back" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#f7f6f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="29px"
        android:layout_marginRight="29px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="13px"
            android:layout_height="17px"
            android:background="@drawable/icon_phone" />

        <EditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="25px"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:background="@null"
            android:hint="请输入手机号"
            android:paddingLeft="5px"
            android:textColor="#000000"
            android:textSize="13px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="4px"
        android:layout_marginLeft="29px"
        android:layout_marginRight="29px"
        android:background="#E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="29px"
        android:layout_marginRight="29px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="16px"
            android:layout_height="12px"
            android:background="@drawable/icon_letter" />

        <EditText
            android:id="@+id/etSmsCode"
            android:layout_width="0px"
            android:layout_height="19px"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:hint="输入验证码"
            android:paddingLeft="5px"
            android:textColor="#000000"
            android:textSize="14px" />

        <com.community.support.component.FontTextView
            android:id="@+id/tvSmsCode"
            android:layout_width="wrap_content"
            android:minWidth="75px"
            android:layout_height="25px"
            android:paddingLeft="7px"
            android:paddingRight="7px"
            android:gravity="center"
            android:tag="{'code':'01006'}"
            android:background="@drawable/shape_stroke_4e"
            android:text="获取验证码"
            android:textColor="#02bcae"
            android:textSize="11px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="4px"
        android:layout_marginRight="29px"
        android:layout_marginLeft="29px"
        android:background="#E4E4E4" />


    <com.community.support.component.FontTextView
        android:id="@+id/tvLogin"
        android:layout_width="275px"
        android:layout_height="35px"
        android:layout_marginTop="65px"
        android:layout_marginLeft="50px"
        android:background="@drawable/btn_blue_solid_corners__bg"
        android:gravity="center"
        android:tag="{'code':'01001'}"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="14px" />


</LinearLayout>